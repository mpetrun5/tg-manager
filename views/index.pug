extends layout

block content
  h4 Notices
    a.btn.btn-default.pull-right(href='/notice/add') Add Notice
  ul.list-group
    each notice, i in notices
      li.list-group-item
        .container-fluid
          #m9.message-item
            .message-inner
              .message-head.clearfix
                .avatar.pull-left
                  notice.author
                    img(src='https://ssl.gstatic.com/accounts/ui/avatar_2x.png' width="50px")
                .user-detail
                  h5.handle= notice.title
                  .post-meta
                    .asker-meta
                      span.qa-message-what
                      span.qa-message-when
                        span.qa-message-when-data=notice.timeStamp
                      span.qa-message-who
                        span.qa-message-who-pad #{" "} by #{" "}
                        span.qa-message-who-data=notice.author
              .qa-message-content
                p=notice.body
              a.pull-left(href='/notice/edit/' + notice._id) Edit
              a.padding-left(href='#') Comment
    br
    #disqus_thread
          script.
            var disqus_config = function () {
            this.page.url = PAGE_URL;  // Replace PAGE_URL with your page's canonical URL variable
            this.page.identifier = PAGE_IDENTIFIER; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
            };
            (function() {
              var d = document, s = d.createElement('script');
              s.src = 'https://tg-manager.disqus.com/embed.js';
              s.setAttribute('data-timestamp', +new Date());
              (d.head || d.body).appendChild(s);
            })();
